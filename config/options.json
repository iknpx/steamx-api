{
    "IMAGEPLACEHOLDER": "https://placeimg.com/300/200/animals",
    "PORT": 5000,
    "LOGGER": "dev",
    "MONGODB": {
        "URI": "mongodb://localhost:27017/steamxapi",
        "OPTIONS": {
            "autoReconnect": true,
            "reconnectTries": 1000,
            "reconnectInterval": 100
        }
    },
    "STEAMSPYAPI": {
        "DELAY": 2501,
        "GAME_DETAILS": "https://steamspy.com/api.php?request=appdetails&appid=${ID}"
    },
    "STEAM": {
        "KEY": "",
        "API": {
            "GET_GAME_DETAILS": "https://store.steampowered.com/api/appdetails?appids=${ID}",
            "GET_PERSON_DETAILS": "https://api.steampowered.com/ISteamUser/GetPlayerSummaries/v0002/?key=${KEY}&steamids=${ID}",
            "GET_PERSON_ID": "https://api.steampowered.com/ISteamUser/ResolveVanityURL/v0001/?key=${KEY}&vanityurl=${NAME}",
            "GET_PERSON_GAMES": "https://api.steampowered.com/IPlayerService/GetOwnedGames/v0001/?key=${KEY}&steamid=${ID}&format=json"
        }
    }
}
